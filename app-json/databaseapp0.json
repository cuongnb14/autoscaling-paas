{
    "id": "database-%(uuid)s",
    "cpus": 0.5,
    "mem": 128,
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "mysql:5.7",
            "network": "BRIDGE",
            "portMappings": [{
                "containerPort": 3306,
                "hostPort": 0,
                "servicePort": %(service_port)d,
                "protocol": "tcp"
            }]
        },
        "volumes": [
            {
                "containerPath": "/var/lib/mysql",
                "hostPath": "/autoscaling/storage/database/%(uuid)s",
                "mode": "RW"
            }
        ]
    },
    "env": {
        "MYSQL_ROOT_PASSWORD": "%(root_password)s"
    },
    "constraints": [
        ["hostname", "CLUSTER", "10.10.10.51"],
        ["hostname", "UNIQUE"]
    ],
    "labels": {
        "HAPROXY_GROUP": "external"
    }
}
